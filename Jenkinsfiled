pipeline {
    // agent any
    // name based agent
    // agent {
    //     node { label 'workstation'}
    // }
    // label based agent
    agent {
        label 'terraform'
    }
    environment {
        sample_url = "ss.example.com"
        SSH = credentials("SSH")
    }
    parameters{
        string(name: 'shankar', defaultValue: 'Mr linux', description: 'The name of the worker')
    }
    stages {
        stage ("one") {
            steps {
                echo "stage one"

            }
        }
        stage ("two") {
            steps {
                echo "stage two"
                sh 'env > /tmp/env'
            }
        }
    }
    post {
        always {
            echo " i say hello always"
        }
        failure {
            echo "  you failed , you should try again"
        }
    }
}

