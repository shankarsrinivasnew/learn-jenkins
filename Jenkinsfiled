pipeline {
    // agent any
    // name based agent
    // agent {
    //     node { label 'workstation'}
    // }
    // label based agent
    agent {
        label 'terraform'
    }
    stages {
        stage ("one") {
            steps {
                echo "stage one"
                exit 1
            }
        }
        stage ("two") {
            steps {
                echo "stage two"
            }
        }
    }
    post{
        always {
            echo " i say hello always"
        }
        failure {
            echo "  you failed , you should try again"
        }
    }
}
