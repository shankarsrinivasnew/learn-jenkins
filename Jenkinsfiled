pipeline {
    // agent any
    // name based agent
    // agent {
    //     node { label 'workstation'}
    // }
    // label based agent
    agent {
        label 'terraform'
    }
    environment {
        sample_url = "ss.example.com"
    }
    stages {
        stage ("one") {
            steps {
                echo "stage one"

            }
        }
        stage ("two") {
            steps {
                echo "stage two"
                sh 'env'
            }
        }
    }
    post {
        always {
            echo " i say hello always"
        }
        failure {
            echo "  you failed , you should try again"
        }
    }
}

